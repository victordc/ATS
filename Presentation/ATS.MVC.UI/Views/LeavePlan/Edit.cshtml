                <div id="info"></div>
            </div>
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            Date.bizdays = function (d1, d2) {
                var bd = 0;
                var dd = 0;
                var next = d1;
                while (next <= d2) {
                    dd = next.getDay();
                    if (dd % 6) { ++bd; }
                    next = new Date(next.getTime() + 86400000);
                }
                return bd;
            }

            
            $('#StartDate').datepicker();
            $('#EndDate').datepicker();

            
            var sss = $('#StartDate').val().split(' ')[0].split('/');
            var eee = $('#EndDate').val().split(' ')[0].split('/');

            $('#StartDate').val(sss[1] + "/" + sss[0] + "/" + sss[2]);
            $('#EndDate').val(eee[1] + "/" + eee[0] + "/" + eee[2]);

            //$('#LeaveCategoryId').val('1');


            $("#StartDate").change(function () {

                var dateStart = new Date($('#StartDate').val());
                var dateEnd = new Date($('#EndDate').val());

                var duration = Date.bizdays(dateStart, dateEnd);

                if (duration == 0) {
                    $('#EndDate').val($('#StartDate').val());
                    if (dateStart.getDay() % 6) {
                        duration = 1;
                    }
                }

                $('#Duration').val(duration);

            });

            $("#EndDate").change(function () {

                var dateStart = new Date($('#StartDate').val());
                var dateEnd = new Date($('#EndDate').val());

                var duration = Date.bizdays(dateStart, dateEnd);

                if (duration == 0) {
                    $('#EndDate').val($('#StartDate').val());
                    if (dateStart.getDay() % 6) {
                        duration = 1;
                    }
                }

                $('#Duration').val(duration);

            });

            $("#Duration").change(function () {

                var dateStart = new Date($('#StartDate').val());
                var dateEnd = new Date($('#EndDate').val());

                var duration = Date.bizdays(dateStart, dateEnd);

                $('#Duration').val(duration);

            });

            $("#LeaveCategoryId").change(function () {
                if ($('#LeaveCategoryId').val() == "") {
                    $('#LeaveCategoryId').val('1');
                }
            });

            $('#createForm').submit(function (e) {

                e.preventDefault();
                var form = $(this);

                if (!form.valid()) return false;

                $("#Progress").show();
                $("#info").hide();

                var stt = new Date($('#StartDate').val());
                var end = new Date($('#EndDate').val());
                var dr = $('#Duration').val();
                var ctg = $('#LeaveCategoryId').val();
                var lpid = $('#LeavePlanId').val();

                request = $.ajax({
                    type: 'POST',
                    url: '/LeavePlan/Edit',
                    //data: form.serialize(),
                    data: {
                        LeaveCategoryId: ctg,
                        StartDate: stt.getDate() + "/" + (stt.getMonth() + 1) + "/" + stt.getFullYear(),
                        EndDate: end.getDate() + "/" + (end.getMonth() + 1) + "/" + end.getFullYear(),
                        Duration: dr,
                        LeavePlanId: lpid
                    },
                    success: function (response) {
                        $("#info").html(response);
                    }
                });

                request.done(function (response, textStatus, jqXHR) {
                    if (response == "True") {
                        $('#info').html("Successfully Done.");
                        $('#info').show(500);
                    }
                    else if (response == "False") {
                        $('#info').html("could not be done. try again in a few minutes please.");
                        $('#info').slideDown(500);
                    }
                    else {
                        $('#info').html(response);
                        $('#info').slideDown(500);
                    }
                });

                request.fail(function (jqXHR, textStatus, errorThrown) {
                    $('#info').html("could not be done. try again in a few minutes please.");
                    $('#info').slideDown(500);
                });

                request.always(function () {
                    $("#Progress").hide();
                });
            });
        });
    </script>
}