@model ATS.Data.Model.Company

@{
    ViewBag.Title = "Add Company";
}

@using (Html.BeginForm("AddCompany", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Add Company</legend>

        <div class="control-group">
            @Html.LabelFor(model => model.CompanyDescription, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.CompanyDescription)
                @Html.ValidationMessageFor(model => model.CompanyDescription, null, new {@class="badge badge-important"})
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Address, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address, null, new {@class="badge badge-important"})
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <input type="submit" name="nextBtn" value="Next" class="btn btn-success"/>
                @*@Html.ActionLink("Next", "AddSupervisor", "Admin", null, new { @class = "btn btn-success" })*@
            </div>
        </div>
        
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
