@model ATS.MVC.UI.Models.RegisterModel
@{
    ViewBag.Title = "Add Agent";
}

@using (Html.BeginForm("AddAgent", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
@*@Html.AntiForgeryToken()*@
    
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add Agent</legend>
        
        <div class="control-group">
            @Html.LabelFor(m => m.RoleName, new { @class = "control-label" })
            <div class="controls">
                @Html.DropDownListFor(m => m.RoleName, ViewBag.myList as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RoleName)
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <input type="submit" name="prevBtn" value="Back" class="btn"/>
                <input type="submit" name="nextBtn" value="Finish" class="btn btn-primary"/>
            </div>
        </div>
    </fieldset>
}

<script src="~/Scripts/validation.js" type="text/javascript"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



