@model IEnumerable<ATS.Data.Model.LeavePlan>

@{
    ViewBag.Title = "Index";
}

<div id="datepicker">
    <h3>My Leaves...</h3>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
</div>
<script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        @*var dates = [
            @foreach (var item in Model)
            { String.Format("'{0:d}'", item.StartDate); }
        ];*@
        
        var beginDates = ['04/01/2014', '06/05/2014', '05/23/2014'];
        var endDates = ['04/05/2014', '06/12/2014', '05/24/2014'];
        var types = ['Annual', 'MC', 'Business'];

        $("#datepicker").datepicker({
            beforeShowDay: highlightDays,
            //onChangeMonthYear: getLeaves(month, year)
        });

        function highlightDays(date) {
            for (var i = 0; i < beginDates.length; i++) {
                if ((new Date(beginDates[i]) <= date) && 
                    (new Date(endDates[i]) >= date) ) {
                    return [true, 'ui-state-active', types[i]];
                }
            }
            return [false, ''];
        }
    });
</script>

<div>
    <br />
    <p>
        @Html.ActionLink("View Team Leaves", "Team", null, new { @class = "btn btn btn-primary" })
    </p>
</div>